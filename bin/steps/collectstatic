#!/usr/bin/env bash

# Syntax sugar.
indent() {
  RE="s/^/       /"
  [ $(uname) == "Darwin" ] && sed -l "$RE" || sed -u "$RE"
}

MANAGE_FILE=$(find . -maxdepth 3 -type f -name 'manage.py' | head -1)
MANAGE_FILE=${MANAGE_FILE:-fakepath}

[ -f .heroku/collectstatic_disabled ] && DISABLE_COLLECTSTATIC=1

if [ ! "$DISABLE_COLLECTSTATIC" ] && [ -f "$MANAGE_FILE" ]; then
    set +e

    echo "Running collectstatic"

    export MEMCACHE_SERVERS='' MEMCACHIER_SERVERS=''

    export DJANGO_SETTINGS_MODULE=crmove.settings_heroku

    # Check if collectstatic is configured properly.
    python $MANAGE_FILE collectstatic --dry-run --noinput &> /dev/null && RUN_COLLECTSTATIC=true

    # Compile assets if collectstatic appears to be kosher.
    if [ "$RUN_COLLECTSTATIC" ]; then

        echo "-----> Compressing static files"
        python $MANAGE_FILE compress --force 2>&1 | indent

        [ $? -ne 0 ] && {
            echo " !     Error running manage.py compress  More info:"
            echo "       http://devcenter.heroku.com/articles/django-assets"
        }

        echo "-----> Collecting static files"
        python $MANAGE_FILE collectstatic --noinput  2>&1 | sed '/^Copying/d;/^$/d;/^ /d' | indent

        [ $? -ne 0 ] && {
            echo " !     Error running manage.py collectstatic. More info:"
            echo "       http://devcenter.heroku.com/articles/django-assets"
        }
    fi

    echo

fi
